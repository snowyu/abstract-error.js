{
  "name": "abstract-error",
  "version": "2.0.0-alpha.7",
  "description": "abstract error class with error code supports to create error class quickly",
  "homepage": "https://github.com/snowyu/abstract-error.js",
  "main": "./lib/index.js",
  "module": "./src/index.js",
  "files": [
    "README.md",
    "LICENSE-MIT",
    "*.js",
    "test",
    "src",
    "lib"
  ],
  "scripts": {
    "build": "npm run build.cjs && npm run build.ts",
    "build.cjs": "babel src --out-dir lib --config-file ./.babelrc",
    "build.ts": "npx cpx 'src/**/*.d.ts' lib",
    "clean": "rm -fr web docs types lib",
    "clean.doc": "rm -fr web docs",
    "clean.ts": "rm -fr types",
    "clean.lib": "rm -fr lib",
    "doc": "typedoc --plugin none --out web ./src",
    "doc.md": "typedoc --plugin typedoc-plugin-markdown --out docs ./src",
    "lint": "npx eslint --config .eslintrc.yml src",
    "lint.fix": "npm run lint -- --fix",
    "release": "npm run clean && npm run build && npx commit-and-tag-version -s",
    "release.alpha": "npm run release -- --prerelease alpha",
    "test": "mocha"
  },
  "dependencies": {
    "inherits-ex": "^2.1.0-alpha.12"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.11.3",
    "@babel/cli": "^7.24.1",
    "@babel/core": "^7.24.3",
    "@babel/plugin-transform-modules-commonjs": "^7.24.1",
    "@babel/register": "^7.23.7",
    "chai": "~4.3.10",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "mocha": "~10.2.0",
    "prettier": "^3.2.5",
    "sinon": "~15.2.0",
    "sinon-chai": "~3.7.0",
    "typedoc": "^0.25.12",
    "typedoc-plugin-markdown": "^3.17.1",
    "typescript": "^5.4.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/snowyu/abstract-error.js"
  },
  "keywords": [
    "buffer",
    "codec",
    "encode",
    "decode",
    "serialization",
    "serialize",
    "deserialize",
    "bytewise",
    "lexicographic",
    "sort",
    "index",
    "object",
    "class"
  ],
  "author": {
    "name": "Riceball LEE",
    "email": "snowyu.lee@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/snowyu/abstract-error.js/issues"
  }
}
